<% if @manufacturers.empty? %>
  <%= flash[:notice] = "Nenhum fabricante cadastrado" %></br>
<% end %>

<% @manufacturers.each do |manufacturer| %>
  <h1><%= link_to manufacturer.name, manufacturer %></h1></br>
<% end %>

<h1><%= link_to "Registrar novo fabricante", new_manufacturer_path %></h1></br>

<h3><%= link_to 'Voltar', root_path %></h3>
